extends layout

block content
  .w3-container.w3-margin
    h1 Termos de Índice

    address [ 
      a(href='/') Página inicial 
      | ]
    
    br

    table.w3-table-all
      tr
        th Termo
        th Id da classe
        th Título da classe
      each t in lista
        tr(id= t.termo)
          td= t.termo
          td
            a(href='/classes/' + t.codigoClasse)= t.idClasse
          td
            a(href='/classes/' + t.codigoClasse)= t.tituloClasse
    
    br

    address [ 
      a(href='/') Página inicial 
      | ]